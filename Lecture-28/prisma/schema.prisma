// we can flip database
// prisma provide migration mean scheme file will sync with database
// prisma feature is auto generated clients aand classes are clients
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  // id      String      @id @default("hello")  // @id is to tell primary key and @default is like if no one is passing value then use default value like here default is hello
  id      Int      @id @default(autoincrement())  // autoincrement will increase one by one if 1,2,3,4 is there and we got error in 3 then we got ans 4 bcz it will increament
  email   String   @unique      // @Unique is for annotation
  name    String?
  password String

}

